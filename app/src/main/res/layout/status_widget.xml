<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.ResDesUx2App.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ResDesUx2.AppWidgetContainer">


    <TextView
        android:id="@+id/appwidget_welcome"
        style="@style/Widget.ResDesUx2App.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"

        android:autoSizeTextType="uniform"

        android:contentDescription="@string/welcome_message"
        android:maxLines="1"
        android:text="@string/appwidget_welcome"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:autoSizeTextType="uniform" />

    <ImageView
        android:id="@+id/appwidget_image"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/appwidget_welcome"
        android:layout_margin="16dp"
        android:src="@drawable/dagoestaand4"
        android:contentDescription="@string/state_visualization" />

</RelativeLayout>