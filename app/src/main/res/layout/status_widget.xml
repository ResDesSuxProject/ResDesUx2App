<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.ResDesUx2App.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ResDesUx2.AppWidgetContainer">


    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.ResDesUx2App.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/welcome_message"
        android:text="@string/welcome_message"
        android:textStyle="bold|italic"

        android:textAlignment="center"

        app:autoSizeTextType="uniform"
        android:autoSizeTextType="uniform"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_below="@+id/appwidget_text"
        android:gravity="center">

        <TextView
            android:id="@+id/intensityScore"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/frequencyScore"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginStart="10dp"/>

    </LinearLayout>
</RelativeLayout>